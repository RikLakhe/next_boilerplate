{
    "name": "ams-fe",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "test": "jest --bail --findRelatedTests",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
        "lint:fix": "eslint --cache --fix --ext .js,.jsx,.ts,.tsx .",
        "postinstall": "npm run execute-husky",
        "docker:build": "docker build -t nextjs-docker .",
        "docker:start": "docker run -p 3000:3000 nextjs-docker",
        "execute-husky": "husky install && husky add .husky/pre-commit \"npx tsc --noEmit && npx lint-staged\""
    },
    "dependencies": {
        "@emotion/cache": "^11.10.5",
        "@emotion/react": "^11.10.6",
        "@emotion/styled": "^11.10.6",
        "@mui/material": "^5.11.12",
        "@mui/styles": "^5.11.12",
        "@types/node": "18.14.6",
        "@types/react": "18.0.28",
        "@types/react-dom": "18.0.11",
        "axios": "^1.3.4",
        "classnames": "^2.3.2",
        "eslint-config-next": "13.2.3",
        "formik": "^2.2.9",
        "next": "13.2.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "sass": "^1.59.2",
        "typescript": "4.9.5"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "eslint": "^8.35.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-security": "^1.7.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-sonarjs": "^0.18.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.1.2",
        "prettier": "^2.8.4",
        "ts-jest": "^29.0.5"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "npm run lint:fix",
            "npm run test"
        ],
        "src/**/*.{js,jsx,ts,tsx,css,scss,md}": "prettier --write --ignore-unknown"
    }
}
